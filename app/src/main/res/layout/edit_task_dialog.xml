<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editRelativeLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTask"
        android:textSize="30dp"
        android:text="Edit Task"
        android:fontFamily="@font/candal"
        android:gravity="center"
        android:textColor="#fac800"
        android:padding="15dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/edit_task_back_arrow"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTask">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/title_dialog_edit"
                android:textSize="20dp"
                android:padding="11dp"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_task_title"
                android:hint="Edit title"

                android:layout_toEndOf="@id/title_dialog_edit"
                android:padding="11dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/desc_dialog_edit"
                android:layout_below="@id/edit_task_title"
                android:textSize="20dp"
                android:padding="11dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_task_desc"
                android:layout_below="@id/edit_task_title"
                android:hint="Edit Description"
                android:layout_toEndOf="@id/desc_dialog_edit"
                android:padding="11dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:id="@+id/startDate_dialog_edit"
                android:layout_below="@id/edit_task_desc"
                android:textSize="20dp"
                android:padding="11dp"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_task_start_date"
                android:layout_below="@id/edit_task_desc"
                android:hint="Edit Start Date"
                android:layout_toEndOf="@id/startDate_dialog_edit"
                android:padding="11dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EndDate"
                android:id="@+id/endDate_dialog_edit"
                android:layout_below="@id/edit_task_start_date"
                android:textSize="20dp"
                android:padding="11dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample Title"
                android:id="@+id/edit_task_end_date"
                android:layout_below="@id/edit_task_start_date"
                android:hint="Edit End Date"
                android:layout_toEndOf="@id/endDate_dialog_edit"
                android:padding="11dp"
                android:textSize="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:gravity="center"
                android:layout_below="@+id/edit_task_end_date"
                android:layout_centerInParent="true"
                android:id="@+id/done_btn"
                android:background="@drawable/add_button_bg"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"/>



        </RelativeLayout>



    </ScrollView>





</RelativeLayout>